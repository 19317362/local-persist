{
  "description": "Named volumes that persist where you specify",
  "documentation": "https://github.com/CWSpear/local-persist#usage-creating-volumes",
  "args": {
    "description": "",
    "name": "",
    "settable": null,
    "value": null
  },
  "entrypoint": [
    "/docker-volume-local-persist"
  ],
  "env": [
    {
      "description": "Debug flag (NYI)",
      "name": "DEBUG",
      "settable": [
        "value"
      ],
      "value": "0"
    }
  ],
  "interface": {
    "socket": "local-persist.sock",
    "types": [
      "docker.volumedriver/1.0"
    ]
  },
  "linux": {
    "capabilities": null,
    "allowAllDevices": false,
    "devices": null
  },
  "mounts": [
    {
      "name": "state",
      "description": "A place to store the plugin state so it can restore in between restarts",
      "source": "/var/lib/docker/plugins/",
      "destination": "/var/lib/docker/plugin-data/",
      "options": [
        "rbind"
      ],
      "settable": [
        "source"
      ],
      "type": "bind"
    },
    {
      "name": "volumes",
      "description": "A mount to share with the plugin: the source must match the path you want to use on the host (and be the same for source and destination (can't get it to work at all...))",
      "destination": "/docker-data/",
      "source": "/docker-data/",
      "options": [
        "rbind"
      ],
      "settable": [
        "destination",
        "source"
      ],
      "type": "bind"
    }
  ],
  "propagatedMount": "/mnt/volumes/"
}
